# 🔧 Configuration du serveur
PORT=8000

# 🌍 Configuration CORS (autorisation des requêtes cross-origin)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com  # Liste des domaines autorisés
CORS_METHODS=GET,POST,PUT,DELETE  # Méthodes HTTP autorisées
CORS_HEADERS=Content-Type,Authorization  # Headers autorisés

# 🛢️ Configuration de la base de données MongoDB
MONGODB_URI=****  # URL de connexion à la base de données

# 🔐 Configuration JWT (JSON Web Token)
JWT_SECRET=****  # Clé secrète pour signer les tokens JWT

# ☁️ Configuration Cloudinary (hébergement d'images)
CLOUDINARY_CLOUD_NAME=your_cloud_name  # Nom du cloud Cloudinary
CLOUDINARY_API_KEY=your_api_key  # Clé API pour l'accès à Cloudinary
CLOUDINARY_API_SECRET=your_api_secret  # Secret API pour l'authentification Cloudinary
